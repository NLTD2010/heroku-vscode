{
  "name": "vscode on heroku",

  "keywords": [
    "node",
    "express",
    "code-server",
    "cloud-development",
    "heroku-api"
  ],
  "env": {
    "PASSWORD": {
      "description": "Create a password to log in to code-server with",
      "required": true
    },
    "NO_SLEEP" : {
      "description": "Prevent app from sleeping, 1=on, 0=off",
